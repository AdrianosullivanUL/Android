<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

        <TableLayout android:id="@+id/board"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button0"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="0"
                    android:onClick="pressedSquare"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:background="@color/buttonBackground"
                     />

                <Button
                    android:id="@+id/button1"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="1"
                    android:background="@color/buttonBackground"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />

                <Button
                    android:id="@+id/button2"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="2"
                    android:background="@color/buttonBackground"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button3"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="3"
                    android:background="@color/buttonBackground"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />

                <Button
                    android:id="@+id/button4"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="4"
                    android:background="@color/buttonBackground"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />

                <Button
                    android:id="@+id/button5"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="5"
                    android:background="@color/buttonBackground"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button6"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="6"
                    android:background="@color/buttonBackground"
                    android:layout_margin="2dp"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />

                <Button
                    android:id="@+id/button7"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="7"
                    android:layout_margin="2dp"
                    android:background="@color/buttonBackground"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />

                <Button
                    android:id="@+id/button8"
                    android:width="100dp"
                    android:layout_height="100dp"
                    android:textSize="50sp"
                    android:tag="8"
                    android:layout_margin="2dp"
                    android:background="@color/buttonBackground"
                    android:textColor="@color/textColor"
                    android:onClick="pressedSquare" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/game_state_textview"
            android:layout_above="@id/board"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_turn"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:textStyle="bold"
            />


        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/board"
            android:layout_below="@id/board"
            android:onClick="pressNewGame"
            android:background="@color/buttonBackground"
            android:textColor="@color/textColor"
            android:layout_margin="2dp"
            android:text="@string/new_game" />

</RelativeLayout>